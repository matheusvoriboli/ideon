#!/bin/sh

echo "ğŸ” Running pre-push validations..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to print colored output
print_status() {
    echo "${GREEN}âœ“${NC} $1"
}

print_error() {
    echo "${RED}âœ—${NC} $1"
}

print_warning() {
    echo "${YELLOW}âš ${NC} $1"
}

# Check if pnpm is installed
if ! command -v pnpm &> /dev/null; then
    print_error "pnpm is not installed. Please install pnpm first."
    exit 1
fi

# Configuration: Set STRICT_MODE=true to fail on test failures
STRICT_MODE=${STRICT_MODE:-false}

# 1. Run ESLint
echo "\nğŸ“‹ Running ESLint..."
if ! pnpm run lint; then
    print_error "ESLint failed. Fix the issues and try again."
    echo "ğŸ’¡ You can run 'pnpm run lint:fix' to auto-fix some issues."
    exit 1
fi
print_status "ESLint passed"

# 2. Check Prettier formatting
echo "\nğŸ¨ Checking Prettier formatting..."
if ! pnpm run format:check; then
    print_error "Code formatting issues detected."
    echo "ğŸ’¡ Run 'pnpm run format' to fix formatting issues."
    exit 1
fi
print_status "Prettier formatting is correct"

# 3. Build the project (includes TypeScript compilation)
echo "\nğŸ—ï¸  Building project..."
if ! pnpm run build; then
    print_error "Build failed. Fix the build errors and try again."
    exit 1
fi
print_status "Build successful"

# 4. Run tests
echo "\nğŸ§ª Running tests..."
if ! pnpm run test:run; then
    if [ "$STRICT_MODE" = "true" ]; then
        print_error "Tests failed. Fix the failing tests and try again."
        exit 1
    else
        print_warning "Tests failed, but proceeding with push (STRICT_MODE=false)"
        echo "ğŸ’¡ Set STRICT_MODE=true to fail on test failures"
    fi
else
    print_status "All tests passed"
fi

echo "\n${GREEN}ğŸ‰ Validations completed! Proceeding with push...${NC}\n" 